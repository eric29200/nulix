VERSION="1.2.7"
SRC_FILENAME="musl-fts-"$VERSION".tar.gz"
URL="https://github.com/void-linux/musl-fts/archive/refs/tags/v"$VERSION".tar.gz"

function configure_port() {
	autoreconf -i
	./configure								\
		--host=$HOST							\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT

	# fix libtool and pkgconfig
	SYSROOT_ESC=$(echo $SYSROOT | sed 's/\//\\\//g')
	sed -i "s/\/usr/$SYSROOT_ESC\/usr/" $SYSROOT"/usr/lib/pkgconfig/musl-fts.pc"
	sed -i "s/\/usr/$SYSROOT_ESC\/usr/" $SYSROOT"/usr/lib/libfts.la"
}