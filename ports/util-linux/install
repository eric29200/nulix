VERSION="2.38.1"
SRC_FILENAME="util-linux-"$VERSION".tar.xz"
URL="https://www.kernel.org/pub/linux/utils/util-linux/v2.38/"$SRC_FILENAME

function configure_port() {
	./configure								\
		--host=$HOST							\
		--disable-chfn-chsh						\
		--disable-login							\
		--disable-nologin						\
		--disable-su							\
		--disable-setpriv						\
		--disable-runuser						\
		--disable-pylibmount						\
		--disable-use-ttygroup						\
		--disable-makeinstall-chown					\
		--without-python						\
		--without-systemd						\
		--prefix=$SYSROOT"/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install

	# create symlinks
	ln -svf /usr/sbin/agetty $SYSROOT/sbin/agetty
}
