VERSION="4.99.5"
SRC_FILENAME="lsof-"$VERSION".tar.gz"
URL="https://github.com/lsof-org/lsof/releases/download/"$VERSION"/"$SRC_FILENAME

function configure_port() {
	./configure								\
		--host=$HOST							\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT

	# fix libtool and pkgconfig
	SYSROOT_ESC=$(echo $SYSROOT | sed 's/\//\\\//g')
	sed -i "s/\/usr/$SYSROOT_ESC\/usr/" $SYSROOT"/usr/lib/liblsof.la"
}
