VERSION="10.2p1"
SRC_FILENAME="openssh-"$VERSION".tar.gz"
URL="https://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/"$SRC_FILENAME

function configure_port() {
	./configure								\
		--host=$HOST							\
		--without-pie							\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
