export HOME=/root
export TERM=linux
export PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin:/usr/X11/bin
export LD_LIBRARY_PATH="/lib:/usr/lib:/usr/X11/lib"
export PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
export XLOCALEDIR="/usr/X11/share/X11/locale"
export LANG=C

alias ls='ls --color'
alias l='ls'
alias ll='ls -l'
alias act='cat'
alias quit='exit'
alias hist='history'
alias h='history'
alias grep='grep --colour'
alias vi='vim'